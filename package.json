{
  "dependencies": {
    "aws-sdk": "^2.1000.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@faker-js/faker": "^9.5.0",
    "@prisma/client": "^6.4.1",
    "@types/aws-lambda": "^8.10.0",
    "@types/bunyan": "^1.8.11",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "prisma": "^6.4.1",
    "ts-jest": "^29.2.6",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "name": "100-letters-project-api",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "db:connect": "node ./scripts/connect.js",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:seed": "node ./scripts/seed.js",
    "db:tunnel": "node ./scripts/tunnel.js",
    "db:generate": "prisma generate",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:all": "eslint src --ext .ts",
    "lint:all:fix": "eslint src --ext .ts --fix",
    "lint:pkg": "node scripts/lint-pkg.js",
    "lint:pkg:fix": "node scripts/lint-pkg-fix.js",
    "prepare": "husky install",
    "test:all": "jest",
    "test:all:watch": "jest --watch",
    "test:pkg": "node scripts/test-pkg.js",
    "test:pkg:watch": "node scripts/test-pkg-watch.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
