{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "common/**/*.ts",
    "routes/**/*.ts",
    "scripts/**/*.ts",
    "types/**/*.ts"
  ]
}
